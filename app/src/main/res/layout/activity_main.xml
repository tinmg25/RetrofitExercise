<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_king"
        android:name="com.tmw.retrofitexercise.fragment.KingFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_queen" />
    <fragment
        android:id="@+id/fragment_queen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.tmw.retrofitexercise.fragment.QueenFragment"
        app:layout_constraintTop_toBottomOf="@id/fragment_king"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>